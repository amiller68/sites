#!/usr/bin/env bash

# Pre-deploy hook for JAX service
# Stops any running JAX container before deploying new one to prevent
# database lock conflicts on the shared blobs store

set -e

echo "Running pre-deploy hook for ${KAMAL_SERVICE_NAME:-unknown service}..."

# Only run this for the JAX service
if [[ "${KAMAL_SERVICE_NAME}" == *"jax"* ]]; then
  echo "Checking for existing JAX containers on remote hosts..."

  # KAMAL_HOSTS contains comma-separated list of target hosts
  # We need to run the stop command on each host via SSH
  IFS=',' read -ra HOSTS <<< "$KAMAL_HOSTS"

  for HOST in "${HOSTS[@]}"; do
    echo "Checking host: $HOST"

    # Execute docker commands on the remote host via SSH
    # Use the same SSH configuration that Kamal uses
    ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null root@"$HOST" bash <<'REMOTE_SCRIPT'
      # Find any running JAX container
      CONTAINER_NAME=$(docker ps --filter "label=service=krondor-sites-jax" --filter "label=role=web" --format "{{.Names}}" | head -1)

      if [ -n "$CONTAINER_NAME" ]; then
        echo "Found existing container: $CONTAINER_NAME"
        echo "Stopping container to release database lock..."
        docker stop "$CONTAINER_NAME"
        echo "Container stopped successfully"
      else
        echo "No existing JAX container found on this host"
      fi
REMOTE_SCRIPT
  done
else
  echo "Skipping pre-deploy hook (not JAX service)"
fi

echo "Pre-deploy hook completed"
